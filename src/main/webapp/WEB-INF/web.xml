<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>ncETL</display-name>
    <description>ncETL</description>
    <!-- #################### FILTERS #################### -->
    <filter>
        <filter-name>CheckErrorStateFilter</filter-name>
        <filter-class>gov.usgs.cida.ncetl.servlet.CheckErrorStateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckErrorStateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- #################### LISTENERS #################### -->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>gov.usgs.cida.ncetl.servlet.Bootstrapper</listener-class>
    </listener>
    <!-- #################### SERVLET CONFIGURATION #################### -->
    <servlet>
        <servlet-name>IngestControlServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.utils.IngestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DecorateServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.DecorateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateRubricServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.GenerateRubricServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatasetServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.DatasetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DateIndexerServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.DateIndexer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.EchoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RandomNumberServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.RandomNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ESRLServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.ESRLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WrapperServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.WrapperServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GlobalAttributeDeaggregationServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.GlobalAttributeDeaggregationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ASCIIConverterServlet</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.ASCIIConverterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RollingGribWriter</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.RollingGribWriter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GridCoordsNcml</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.servlet.GridCoordsNcml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IngestControlServlet</servlet-name>
        <url-pattern>/ingestors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DecorateServlet</servlet-name>
        <url-pattern>/decorate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateRubricServlet</servlet-name>
        <url-pattern>/nciso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatasetServlet</servlet-name>
        <url-pattern>/datasets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DateIndexerServlet</servlet-name>
        <url-pattern>/dates</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RandomNumberServlet</servlet-name>
        <url-pattern>/random</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ESRLServlet</servlet-name>
        <url-pattern>/esrl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WrapperServlet</servlet-name>
        <url-pattern>/WrapperServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GlobalAttributeDeaggregationServlet</servlet-name>
        <url-pattern>/globalattrs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ASCIIConverterServlet</servlet-name>
        <url-pattern>/ascii2nc</url-pattern>
    </servlet-mapping>
    <!-- #################### JSL SERVICES CONFIGURATION #################### -->
    <servlet>
        <servlet-name>CatalogService</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.service.CatalogService</servlet-class>
        <init-param>
            <param-name>jndi_name</param-name>
            <param-value>java:comp/env/jdbc/NCETL</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogService</servlet-name>
        <url-pattern>/service/catalog/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LookupService</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.service.LookupService</servlet-class>
        <init-param>
            <param-name>jndi_name</param-name>
            <param-value>java:comp/env/jdbc/NCETL</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LookupService</servlet-name>
        <url-pattern>/service/lookup/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IngestControlService</servlet-name>
        <servlet-class>gov.usgs.cida.ncetl.service.IngestControlService</servlet-class>
        <init-param>
            <param-name>jndi_name</param-name>
            <param-value>java:comp/env/jdbc/NCETL</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>IngestControlService</servlet-name>
        <url-pattern>/service/task/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RollingGribWriter</servlet-name>
        <url-pattern>/RollingGribWriter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GridCoordsNcml</servlet-name>
        <url-pattern>/GridCoordsNcml</url-pattern>
    </servlet-mapping>
</web-app>
