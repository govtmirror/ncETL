<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<!-- <encoder>
            	<pattern>%d{HH:mm:ss} %p %C.%M(%L): %m%n</pattern>
        	</encoder>-->
        <encoder>
            <pattern>%d %p %c{1}: %m%n</pattern>
        </encoder>
    </appender>
    
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.base}/logs/NCETL/ncetl.log</File>
        <encoder>
            <pattern>%d %p %c: %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/NCETL/ncetl.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
            <maxFileSize>100MB</maxFileSize>
        </timeBasedFileNamingAndTriggeringPolicy>

    </appender>
    
    <appender name="email" class="ch.qos.logback.classic.net.SMTPAppender">
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>WARN</level>
    	</filter>
    	<smtpHost>${smtp_host:-localhost}</smtpHost>
    	<!--  <to>${ngwmn_remedy_destination:-servicedesk@usgs.gov}</to>  -->
    	<to>rhayes@usgs.gov</to>
    	<from>gdp@usgs.gov</from>
    	<subject>TESTING: %logger{20} - %m</subject>
    	<asynchronousSending>false</asynchronousSending>
        <encoder>
            <pattern>%d{HH:mm:ss} %p %c{1}: %m%n</pattern>
        </encoder>
  	</appender>
  	
    <root level="DEBUG">
        <appender-ref ref="stdout"/>
        <appender-ref ref="email"/>
    </root>
    
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.persister" level="DEBUG"/>
    
</configuration>
